<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_catalog_root"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp"
    >

  <TextView
      android:id="@+id/item_catalog_icon"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:background="@drawable/bg_catalog_entry"
      android:gravity="center"
      android:padding="6dp"
      android:text="T"
      android:textColor="#fff"
      android:textSize="16sp"
      />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_margin="8dp"
      android:layout_toEndOf="@id/item_catalog_icon"
      android:layout_toRightOf="@id/item_catalog_icon"
      >

    <TextView
        android:id="@+id/item_catalog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Some currency"
        android:textColor="#DE000000"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/item_catalog_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_catalog_name"
        android:layout_margin="2dp"
        android:text="SCR"
        android:textColor="#8A000000"
        android:textSize="14sp"
        />

  </RelativeLayout>

</RelativeLayout>